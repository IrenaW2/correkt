{
  "manifest_version": 3,
  "name": "Correkt",
  "description": "Work in progress",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "css": [
        "correkt.css"
      ],
      "js": [
        "correkt.js"
      ],
      "matches": [
        "https://twitter.com/*"
      ]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["fonts/*.ttf"],
    "matches": ["https://twitter.com/*"]
  }]
}
